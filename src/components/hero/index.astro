---
import { TypeAnim } from "./typeanim";
---

<div class="title">
	<img src="/me.webp">
	<h1>Hi! I'm ringoXD.</h1>
	<h2>I'm a <TypeAnim client:idle /></h2>
</div>

<style>
	.title,
	.uwu {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	}
	.title img {
		border-radius: 50%;
		width: 200px;
		height: 200px;
		animation: iconanim 1s ease-in-out 0.5s forwards;
		opacity: 0;
		margin: 10px;
	}

	.title h1 {
		animation: slideanim 0.75s ease 1.5s forwards;
		opacity: 0;
	}
	.title h2 {
		animation: slideanim 0.75s ease 1.53s forwards;
		opacity: 0;
	}

	.title h1,
	.title h2 {
		margin: 5px;
	}
</style>