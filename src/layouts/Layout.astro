---
interface Props {
	title: string;
	description: string;
}

import { ViewTransitions } from 'astro:transitions';
import Background  from '../components/ui/Background.astro'

const { title, description } = Astro.props;
---

<!doctype html>
<html>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/favicon.ico">
		<link rel="apple-touch-icon" href="/apple-touch-icon.png" sizes="180x180">
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<Background transition:persist/>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--background: #13151a;
	}
	
	@font-face {
		font-family: 'Lexend';
		src: url('/fonts/Lexend.woff') format('woff');
		font-weight: 300;
		font-style: normal;
		font-optical-sizing: auto;
	}
	html {
		font-family: "Lexend", system-ui, sans-serif;
		background: var(--background);
		background-size: 224px;
		color:white;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	.flex {
		display: flex;
	}
	.flex-center {
		align-items: center;
		justify-content: center;
	}
	.flex-column {
		flex-direction: column;
	}
	.flex-row {
		flex-direction: row;
	}
	h1 {
		font-size: 2.25em;
	}
	h2 {
		font-size: 1.5em;
	}
	a {
		transition: color 0.25s ease;
	}
	a:hover {
		color: aquamarine;
	}
	.me-background {
		margin: 0;
		padding: 0;
	}
	.me-bgimg {
		position: fixed;
		object-fit: cover;
		width: auto;
		height: 100vh;
		left: 50%;
		top: 50%;
		transform: translate(-50%, -50%);  
		z-index: -100;
		animation: bganim 1.25s ease-in-out 1.75s forwards;
		opacity: 0;
	}
	@keyframes bganim {
		from {
			opacity: 0;
		}
		to {
			opacity: 0.4;
		}
	}


	@keyframes iconanim {
	from {
		transform: scale(0.8);
		opacity: 0;
	}
	to {
		transform: scale(1);
		opacity: 1;
	}
	}
	@keyframes slideanim {
		from {
			height: auto;
			transform: translateY(20px);
			opacity: 0;
		}
		to {
			height: auto;
			transform: translateY(0);
			opacity: 1;
		}
	}
</style>
